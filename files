// app/stacks/page.tsx
import React, { useState } from 'react';
import Link from 'next/link';
import Button from './Button';

const categories = [
  { name: 'Category 1', href: '/category1' },
  { name: 'Category 2', href: '/category2' },
  { name: 'Category 3', href: '/category3' },
];

const StacksPage = () => {
  const [activeFilter, setActiveFilter] = useState('');

  return (
    <div>
      <div className="flex flex-wrap justify-center gap-4">
        {categories.map((category) => (
          <Button
            key={category.name}
            variant="outline"
            onClick={() => setActiveFilter(category.name)}
            className={`rounded-full transition-all duration-200 border border-black/10 backdrop-blur-md px-4 py-2
              ${activeFilter === category.name
                ? 'bg-white/80 shadow-sm'
                : 'bg-white/60 hover:bg-white/80'
              }`}
          >
            {/* Remove emoji: only show name */}
            {category.name}
          </Button>
        ))}
      </div>

      {/* ** rest of code here ** */}
    </div>
  );
};

export default StacksPage;

// app/influencers/page.tsx
import React from 'react';
import Link from 'next/link';
import Image from 'next/image';
import Button from './Button';

const influencers = [
  { name: 'Influencer 1', image: '/influencer1.jpg', specialty: 'Specialty 1', stacks: ['Stack 1', 'Stack 2'] },
  { name: 'Influencer 2', image: '/influencer2.jpg', specialty: 'Specialty 2', stacks: ['Stack 3', 'Stack 4'] },
];

const InfluencersPage = () => {
  return (
    <div className="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
      {influencers.map((influencer) => (
        <div key={influencer.name} className="bg-white rounded-2xl shadow-lg p-6 flex flex-col items-center text-center transition-transform duration-300 hover:-translate-y-1">
          <Image src={influencer.image || "/placeholder.svg"} alt={influencer.name} width={88} height={88} className="rounded-full mb-4 object-cover" />
          <h2 className="text-xl font-bold text-gray-900">{influencer.name}</h2>
          <p className="text-sage-green font-medium mb-5">{influencer.specialty}</p>

          <div className="w-full">
            <h3 className="text-sm font-semibold text-gray-500 uppercase tracking-wider mb-3">Top Stacks</h3>
            <div className="grid grid-cols-3 gap-2">
              {influencer.stacks.map((stack) => (
                <Link href={`/stacks?search=${stack}`} key={stack} className="block">
                  <div className="bg-sandy-beige rounded-lg py-2 px-2 text-xs font-medium text-gray-700 hover:bg-sage-green-100 transition-colors text-ellipsis overflow-hidden whitespace-nowrap">
                    {stack}
                  </div>
                </Link>
              ))}
            </div>
          </div>

          <div className="mt-6 w-full">
            <Button className="w-full bg-sage-green hover:bg-sage-green-600">View Full Profile</Button>
          </div>
        </div>
      ))}
    </div>
  );
};

export default InfluencersPage;
